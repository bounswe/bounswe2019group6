<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    android:orientation="vertical">
    <!-- Header aligned to top -->


    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="#01BBD6"
            android:clickable="true"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:minHeight="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="#FFFF"
            android:textSize="17sp" />

        <Button
            android:id="@+id/login_register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#33000000"
            android:clickable="true"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:minHeight="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/signup"
            android:textAllCaps="false"
            android:textColor="#FFFF"
            android:textSize="17sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footer"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_page_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/trader_logo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">


            <Button
                android:id="@+id/login_forgot_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#33000000"
                android:clickable="true"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@string/forgot_pass"
                android:textAllCaps="false"

                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:focusable="true" />
            <EditText
                android:id="@+id/login_mail_val"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.18"
                android:background="@drawable/draw_bottom_line"
                android:drawableLeft="@drawable/login_mail_icon"
                android:drawablePadding="13dp"
                android:textColorHint="@color/white"
                android:fontFamily="sans-serif"
                android:gravity="center|start"
                android:hint="@string/your_mail"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="14sp"  />

            <EditText
                android:id="@+id/login_pass_val"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.18"
                android:background="@drawable/draw_bottom_line"
                android:drawableLeft="@drawable/login_pass_icon"
                android:drawablePadding="18dp"
                android:fontFamily="sans-serif"
                android:gravity="center|start"
                android:hint="@string/password"
                android:textColorHint="@color/white"
                android:inputType="textPassword"
                android:paddingLeft="13dp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="14sp" />




            <LinearLayout
                android:id="@+id/login_or_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"
                android:gravity="center"
                android:orientation="horizontal">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/draw_middle_line" />

                <TextView
                    android:id="@+id/login_option_or"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="or"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/draw_middle_line" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/facebook_login_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:orientation="horizontal">

                <!-- TODO google api integration  !-->
                <Button
                    android:id="@+id/google_login"
                    android:text="Login with Google"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"

                    />

            </LinearLayout>

            <TextView
                android:id="@+id/login_warning"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3" />


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>